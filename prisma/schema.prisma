// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(150)
  email    String @unique @db.VarChar(150)
  password String @db.VarChar(100)
  phone    String @db.VarChar(50)
  age      Int

  medicines Medicine[]

  @@map("users")
}

model Medicine {
  id        Int     @id @default(autoincrement())
  userId    Int
  name      String  @db.VarChar(150)
  type      String  @db.VarChar(50)
  dosage    String  @db.VarChar(50)
  stock     Int     @default(0)
  minStock  Int
  notes     String? @db.Text
  status    Boolean @default(true)

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  schedules Schedule[]

  @@index([userId])
  @@map("medicine")
}

model Schedule {
  id         Int      @id @default(autoincrement())
  medicineId Int
  startDate  DateTime
  status     Boolean  @default(true)

  medicine Medicine         @relation(fields: [medicineId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  details  ScheduleDetail[]

  @@index([medicineId])
  @@map("schedules")
}

model ScheduleDetail {
  id         Int      @id @default(autoincrement())
  scheduleId Int
  time       DateTime @db.Time
  
  schedule  Schedule  @relation(fields: [scheduleId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  histories History[]

  @@index([scheduleId])
  @@map("schedule_details")
}

model History {
  id          Int            @id @default(autoincrement())
  detailId    Int            // Diubah menjadi wajib (tidak pakai ?)
  date        DateTime
  timeTaken   DateTime?
  status      ReminderStatus
  updatedAt   DateTime       @updatedAt // Untuk sorting aksi terbaru

  detail      ScheduleDetail @relation(fields: [detailId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([detailId])
  @@unique([detailId, date])
  @@map("history")
}

enum ReminderStatus {
  PENDING
  DONE
  MISSED
}